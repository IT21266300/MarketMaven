<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_row="0"
    android:layout_column="0"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp"
    android:layout_margin="12dp"
    android:backgroundTint="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/card_his_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingVertical="10dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_month_24"/>

            <TextView
                android:id="@+id/transDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins"
                android:text="06/05/2023"
                android:textColor="@color/headingMain"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/trans_total_cost"
                android:textColor="@color/headingOpt2"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/transTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 4000.00LKR"
                android:textSize="26sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/headingMain"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins"
                android:text="@string/trans_item_name"
                android:textColor="@color/headingOpt2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/transItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Tomato"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/headingMain"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins"
                android:text="@string/trans_item_weight"
                android:textColor="@color/headingOpt2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/transItemWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 50Kg"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/headingMain"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/headingMain"
                    android:fontFamily="@font/poppins"
                    android:paddingVertical="5dp"
                    android:text="View More"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>