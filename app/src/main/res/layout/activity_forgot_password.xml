<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@color/LLLgreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/reset_password"
            android:textColor="@color/Dgreen"
            android:textSize="35sp"
            android:fontFamily="@font/bungee_regular"
            android:padding="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="7dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reset_userName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Username"
                android:textColorHint="@color/black"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Lgreen">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reset_password1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter New password"
                android:textColorHint="@color/black"
                android:layout_marginBottom="10dp"
                app:passwordToggleEnabled="true"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Lgreen">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reset_password2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Confirm password"
                android:textColorHint="@color/black"
                android:layout_marginBottom="10dp"
                app:passwordToggleEnabled="true"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Lgreen">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/reset_editPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textSize="9pt"
                android:text="@string/btn_reset"
                android:backgroundTint="@color/Dgreen"
                android:layout_marginHorizontal="25dp"/>
            <Button
                android:id="@+id/reset_to_home"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/reset_home"
                android:textSize="7pt"
                android:textColor="@color/purple_700"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>