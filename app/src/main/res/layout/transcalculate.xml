<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/appBar"
            layout="@layout/appbar" />

        <TextView
            android:id="@+id/trans_cal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBar"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/calculate_header"
            android:textAlignment="center"
            android:textColor="@color/headingMain"
            android:textSize="26sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/item_abt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trans_cal_header"
            android:layout_marginHorizontal="34dp"
            android:background="@drawable/rounded_corners"
            android:elevation="8dp"
            android:gravity="center"
            android:paddingHorizontal="12sp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/item_name"
                android:textColor="@color/headingOpt2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:allowClickWhenDisabled="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tomato"
                android:textColor="@color/headingOpt2"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cal_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_abt"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/rounded_corners"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12sp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_weight"
                    android:text="@string/item_weight"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_item_weight"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_weight_factor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_weight_factor"
                    android:text="@string/item_weight_factor"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_weight_factor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_item_weight_factor"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_pickup"
                    android:text="@string/pickup_location"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_pickup_location"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_delivery"
                    android:text="@string/delivery_location"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_delivery_location"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_distance"
                    android:text="@string/distance"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_distance"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_distance"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fuelEfficient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_fuelEfficient"
                    android:text="@string/fuelEfficient"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_fuelEfficient"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_fuelEfficient"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fuelPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_fuelPrice"
                    android:text="@string/fuelPrice"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_fuelPrice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_price"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/driverWage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:labelFor="@id/edt_fuelEfficient"
                    android:text="@string/driverWage"
                    android:textColor="@color/headingMain"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_driverWage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="@string/hint_wage"
                    android:inputType="numberDecimal"
                    android:textColor="@color/para_text"
                    android:textColorHint="@color/headingOpt1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/para_text"
                    android:fontFamily="@font/poppins"
                    android:text="@string/btn_rest_calculate"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundOpt2"
                    android:fontFamily="@font/poppins"
                    android:text="@string/btn_calculate"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>